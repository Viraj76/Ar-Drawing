<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ARDrawSketch" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_3</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_2</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppThemeNoActionbar" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlHighlight">@color/ripple_color</item>
        <item name="colorPrimary">@color/primary_3</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeBottomLeft">200dp</item>
        <item name="cornerSizeBottomRight">200dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>