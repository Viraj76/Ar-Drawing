<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/rel_flash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ic_flash"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_flash_on"
                app:tint="@color/primary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_flip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/flip"
                app:tint="@color/primary" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <ImageView
                android:id="@+id/record_video"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/rec_button" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/camera"
                app:tint="@color/primary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_gallery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/gallery"
                app:tint="@color/primary" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/rel_lock"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_3sdp">

            <ImageView
                android:id="@+id/ic_lock"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_8sdp"
                app:srcCompat="@drawable/lock"
                app:tint="@color/primary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_opacity_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:id="@+id/ic_opacity"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/opacity"
                app:tint="@color/primary" />

            <SeekBar
                android:id="@+id/alpha_seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/rel_edit_round"
                android:layout_toEndOf="@+id/ic_opacity"
                android:max="10"
                android:maxHeight="@dimen/_12sdp"
                android:minHeight="@dimen/_12sdp"
                android:progress="5"
                android:progressDrawable="@drawable/progressdrawable"
                android:thumb="@drawable/thumb"
                android:thumbOffset="-5dp" />

            <RelativeLayout
                android:id="@+id/rel_edit_round"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/img_outline"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/outline"
                    app:tint="@color/primary" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layer"
        android:layout_below="@+id/top_layer"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:keepScreenOn="true"
            app:cameraAutoFocusMarker="@string/cameraview_default_autofocus_marker"
            app:cameraFacing="back"
            app:cameraFlash="off" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/objImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha="50"
            android:scaleType="matrix" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="LottieHandStrech.lottie"
            app:lottie_loop="true" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/native_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/close"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_close"
                app:tint="@color/text" />

            <include layout="@layout/include_native_button_top" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font"
        android:shadowColor="#88000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="@color/text" />

</RelativeLayout>
